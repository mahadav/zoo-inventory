{% extends 'base.html.twig' %}

{% block title %}Edit Diet Item{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Edit Diet Item</h1>

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <div class="card">
            <div class="card-body">
                <form method="post" action="{{ path('web_diet_item_update', {'id': dietItem.id}) }}">
                    <div class="mb-3">
                        <label for="feedId" class="form-label">Feed Item</label>
                        <select class="form-control" id="feedId" name="feedId" required>
                            {% for feedItem in feedItems %}
                                <option value="{{ feedItem.id }}"
                                        {% if feedItem.id == dietItem.feedItem.id %}selected{% endif %}>
                                    {{ feedItem.name }} ({{ feedItem.category.name }} - {{ feedItem.unit.name }})
                                </option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="quantity" class="form-label">Quantity</label>
                        <input type="number" step="0.01" class="form-control"
                               id="quantity" name="quantity"
                               value="{{ dietItem.quantity }}" required>
                    </div>

                    <button type="submit" class="btn btn-primary">Update Diet Item</button>
                    <a href="{{ path('web_diet_items_list', {'animalId': dietItem.species.id}) }}"
                       class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
{% endblock %}