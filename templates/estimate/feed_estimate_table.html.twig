{# templates/estimate/feed_estimate_table.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Feed Estimate - {{ category.name }} - {{ days_info.month_name }} {{ year }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        * {
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        body { background-color: #f5f7fa; color: #333; line-height: 1.6; padding: 20px; margin: 0; }
        .container { max-width: 1400px; margin: 0 auto; background-color: white; border-radius: 8px; box-shadow: 0 3px 10px rgba(0,0,0,0.08); padding: 20px; overflow-x: auto; }
        h1 { color: #2c3e50; text-align: center; margin-bottom: 20px; padding-bottom: 10px; border-bottom: 1px solid #e0e0e0; }
        table { width: 100%; border-collapse: collapse; font-size: 0.9rem; border: 1px solid #ddd; }
        th { background-color: #f8f9fa; color: #2c3e50; font-weight: 600; text-align: center; padding: 12px 8px; border-bottom: 2px solid #ddd; position: sticky; top: 0; z-index: 2; }
        td { padding: 10px 8px; text-align: center; border-bottom: 1px solid #e0e0e0; vertical-align: middle; }
        tr:hover { background-color: #f9f9f9; }
        .diet-item { text-align: left; padding-left: 15px; font-weight: 500; border-right: 1px solid #e0e0e0; }
        .sl-no { font-weight: 500; color: #2c3e50; border-right: 1px solid #e0e0e0; }
        .animal-name { font-weight: 600; color: #2c3e50; font-size: 1rem; }
        .animal-count { font-size: 0.85rem; color: #666; margin-top: 3px; }
        .diet-per-animal { color: #2c3e50; }
        .total-per-day { font-weight: 600; color: #2c3e50; }
        .table-footer { margin-top: 15px; font-size: 0.85rem; color: #666; text-align: center; padding-top: 10px; border-top: 1px solid #eee; }
        @media (max-width: 768px) {
            .container { padding: 10px; }
            table { font-size: 0.8rem; }
            th, td { padding: 8px 5px; }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Animal Daily Diet Requirements — {{ category.name }}</h1>

        <div class="table-container">
            <h3>Diet Per Animal &amp; Total Per Day (Combined)</h3>

            {# place this just above <table> #}
            <div style="display:flex; justify-content:flex-end; gap:8px; margin-bottom:12px;">
                {# keep same query params so export matches current view #}
                <a href="{{ path('feed_estimate_table', {
                    month: month,
                    year: year,
                    fastingDay: fasting_day,
                    category: category.id
                }) }}"
                   class="btn btn-outline-secondary btn-sm">Refresh</a>

              {#  <a href="{{ path('feed_estimate_export_excel', {
                    month: month,
                    year: year,
                    fastingDay: fasting_day,
                    category: category.id
                }) }}"
                   class="btn btn-success btn-sm"
                   title="Export CSV (open in Excel)">
                    <i class="fas fa-file-csv"></i> Export Excel
                </a>#}

                <a href="{{ path('feed_estimate_export_pdf', {
                    month: month,
                    year: year,
                    fastingDay: fasting_day,
                    category: category.id
                }) }}"
                   class="btn btn-primary btn-sm"
                   target="_blank"
                   rel="noopener">
                    <i class="fas fa-file-pdf"></i> Export PDF
                </a>

            </div>


            <table>
                <thead>
                <tr>
                    <th>SL No</th>
                    <th>Feed Items</th>
                    {% for animal in animals %}
                        <th colspan="2">
                            <div class="animal-name">{{ animal.name }}</div>
                            <div class="animal-count">{{ animal.quantity }} {{ animal.quantity > 1 ? 'animals' : 'animal' }}</div>
                        </th>
                    {% endfor %}
                    <th>Total / Day</th>
                </tr>
                <tr>
                    {% for animal in animals %}
                        <th>Diet / Day</th>
                        <th>Total / Day</th>
                    {% endfor %}
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for feed_item in feed_items %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td style="text-align:left;">{{ feed_item.name }}</td>

                        {% for animal in animals %}
                            {% set diet = feed_item.diets[animal.id] ?? {'per_animal': 0, 'required_for_quantity': 0} %}
                            <td>{{ diet.per_animal ? diet.per_animal|number_format(2) ~ ' ' ~ (feed_item.unit ?: '') : '-' }}</td>
                            <td>{{ diet.required_for_quantity ? diet.required_for_quantity|number_format(2) ~ ' ' ~ (feed_item.unit ?: '') : '-' }}</td>
                        {% endfor %}

                        <td>{{ feed_item.daily_total ? feed_item.daily_total|number_format(2) ~ ' ' ~ (feed_item.unit ?: '') : '-' }}</td>
                    </tr>
                {% endfor %}
                </tbody>

                <tfoot>
                <tr>
                    <td colspan="2"><strong>Totals</strong></td>
                    {% for animal in animals %}
                        <td></td>
                        <td><strong>{{ column_totals[animal.id] ? column_totals[animal.id]|number_format(2) ~ ' ' : '-' }}</strong></td>
                    {% endfor %}
                    <td><strong>{{ grand_total|number_format(2) }}</strong></td>
                </tr>
                </tfoot>
            </table>

            <div class="table-footer">
                Period: <strong>{{ days_info.month_name }} {{ year }}</strong> —
                Total Days: <strong>{{ days_info.total_days }}</strong>,
                Feeding Days: <strong>{{ days_info.feeding_days }}</strong>,
                Fasting Days: <strong>{{ days_info.fasting_days }}</strong>
            </div>
        </div>
    </div>
{% endblock %}