{# templates/web/zoo_homepage.html.twig #}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<!-- Font Awesome (keeping for compatibility with existing icons) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<!-- Custom CSS -->
<link href="{{ asset('css/app.css') }}" rel="stylesheet">

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" >
                ğŸ¾ Zoo IMS
            </a>

            <div class="d-flex align-items-center">
                {# Show user name and logout if logged in, otherwise show login #}
                {% if app.user %}
                    <span class="me-3">Hello, {{ app.user.username ?: app.user.email }}</span>

                    <form action="{{ path('app_logout') }}" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
                    </form>
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-primary">Login</a>
                {% endif %}
            </div>
        </div>
    </nav>

    <div class="container py-5">

        <div class="text-center mb-5">
            <h1 class="display-5 fw-bold">ğŸ˜ Zoo Inventory Management System</h1>
            <p class="lead text-muted">
                Manage animals, foods, and feeding schedules from one place
            </p>
        </div>

        <div class="row g-4 justify-content-center">

            <!-- Animals -->
            <div class="col-md-4">
                <div class="card border-0 shadow-lg h-100 text-center">
                    <div class="card-body py-5">
                        <h2 class="mb-3">ğŸ¦ Animals</h2>
                        <p>
                            View / Edit animal population and diet patterns
                        </p>
                        {% if app.user %}
                            <a href="{{ path('animal_index') }}" class="btn btn-primary btn-lg mt-3">Manage Animals</a>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="btn btn-outline-primary btn-lg mt-3">Login to Manage</a>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Foods -->
            <div class="col-md-4">
                <div class="card border-0 shadow-lg h-100 text-center">
                    <div class="card-body py-5">
                        <h2 class="mb-3">ğŸ¥• Foods</h2>
                        <p>
                            Add and manage foods assigned to animals
                        </p>
                        {% if app.user %}
                            <a href="{{ path('food_index') }}" class="btn btn-success btn-lg mt-3">Manage Foods</a>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="btn btn-outline-success btn-lg mt-3">Login to Manage</a>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Feed Estimate -->
            <div class="col-md-4">
                <div class="card border-0 shadow-lg h-100 text-center">
                    <div class="card-body py-5">
                        <h2 class="mb-3">ğŸ“Š Feed Estimate</h2>
                        <p>
                            Generate daily and yearly feed reports
                        </p>
                        {% if app.user %}
                            <a href="{{ path('estimate_index') }}" class="btn btn-warning btn-lg mt-3">Generate Report</a>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="btn btn-outline-warning btn-lg mt-3">Login to Generate</a>
                        {% endif %}
                    </div>
                </div>
            </div>

        </div>

        <hr class="my-5">

        <div class="text-center text-muted">
            <small>Zoo Management System Â© {{ "now"|date("Y") }}</small>
        </div>
    </div>

{% endblock %}
