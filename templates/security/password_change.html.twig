{# templates/password/change.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <title>Change Password</title>
</head>
<body>
{% for label, messages in app.flashes %}
    {% for msg in messages %}
        <div class="flash {{ label }}">{{ msg }}</div>
    {% endfor %}
{% endfor %}

<h1>Change Password</h1>
<form method="post" action="{{ path('app_change_password') }}">
    <label>New password: <input type="password" name="password" required></label><br>
    <label>Confirm password: <input type="password" name="confirm_password" required></label><br>
    <button type="submit">Update Password</button>
</form>
</body>
</html>
