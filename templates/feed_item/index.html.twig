{% extends 'base.html.twig' %}

{% block title %}Feed Items{% endblock %}

{% block body %}
    <div class="container mt-4">

        <div class="d-flex justify-content-between mb-3">
            <h3>Feed Items</h3>
            <a href="{{ path('web_feed_item_new') }}" class="btn btn-primary">+ Add Feed Item</a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <div class="card">
            <div class="card-body p-0">
                <table class="table table-bordered mb-0">
                    <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Estimated Price</th>
                        <th>Unit</th>
                        <th>Category</th>
                        <th>Animal Category</th>
                        <th width="120">Action</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for item in feedItems %}
                        <tr>
                            <td>{{ item.id }}</td>
                            <td>{{ item.name }}</td>
                            <td>{{ item.estimatedPrice }}</td>
                            <td>{{ item.unit.name }}</td>
                            <td>{{ item.category.name }}</td>
                            <td>{{ item.animalCategory.name }}</td>
                            <td>
                                <a href="{{ path('web_feed_item_edit', {id: item.id}) }}"
                                   class="btn btn-sm btn-warning">Edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
{% endblock %}
