{% extends 'base.html.twig' %}

{% block title %}Edit Feed Item{% endblock %}

{% block body %}
    <div class="container mt-4">

        <h3 class="mb-3">Edit Feed Item</h3>

        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <div class="card">
            <div class="card-body">
                <form method="post">

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Name</label>
                            <input type="text" name="name" class="form-control"
                                   value="{{ feedItem.name }}" required>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Estimated Price</label>
                            <input type="number" step="0.01" name="estimatedPrice" class="form-control"
                                   value="{{ feedItem.estimatedPrice }}" required>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="form-label">Unit</label>
                            <select name="unitId" class="form-select" required>
                                <option value="">Select Unit</option>
                                {% for unit in units %}
                                    <option value="{{ unit.id }}"
                                            {% if feedItem.unit and feedItem.unit.id == unit.id %}selected{% endif %}>
                                        {{ unit.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Category</label>
                            <select name="categoryId" class="form-select" required>
                                <option value="">Select Category</option>
                                {% for category in categories %}
                                    <option value="{{ category.id }}"
                                            {% if feedItem.category and feedItem.category.id == category.id %}selected{% endif %}>
                                        {{ category.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Animal Category</label>
                            <select name="animalCategoryId" class="form-select" required>
                                <option value="">Select Animal Category</option>
                                {% for animalCategory in animalCategories %}
                                    <option value="{{ animalCategory.id }}"
                                            {% if feedItem.animalCategory and feedItem.animalCategory.id == animalCategory.id %}selected{% endif %}>
                                        {{ animalCategory.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('web_feed_item_index') }}" class="btn btn-secondary">Back</a>
                        <button type="submit" class="btn btn-success">Update</button>
                    </div>

                </form>
            </div>
        </div>

    </div>
{% endblock %}
